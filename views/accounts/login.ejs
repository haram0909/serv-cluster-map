<% layout('layouts/boilerplate.ejs') %>
<div class="justify-content-center align-items-center mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1589403992174-da57ba171563?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/account/login" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3 validate-me">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                        </div>
                        <div class="mb-3 validate-me">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                        </div>
                        <button class="btn btn-success btn-block">Login</button>
                    </form>
                    <div class="mt-3">
                        <span class="text"> Do not have an account? <a href="/account/register">Register</a> 
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>